# Environment variables for Trading Bot Simulator
# Copy this file to .env and modify as needed

# Data settings
TBS_DATA_CACHE_DIR=data/cache
TBS_DATA_SAMPLE_DIR=data/sample

# Logging
TBS_LOG_LEVEL=INFO
TBS_LOG_FORMAT=json

# HTTP settings (optional)
HTTP_PROXY=
HTTPS_PROXY=

# Model settings
TBS_MODEL_SAVE_DIR=runs
TBS_EVAL_OUTPUT_DIR=runs

# GPU settings (optional)
CUDA_VISIBLE_DEVICES=0

# Matplotlib backend for headless environments
MPLBACKEND=Agg

# Random seed for reproducibility
TBS_SEED=42

# Default configuration
TBS_DEFAULT_CONFIG=configs/default.yaml
